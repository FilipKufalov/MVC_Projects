@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Name</th>
                <th>@item.DisplayOrder</th>
                <th>@item.CreatedDate</th>
                <th><a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a></th>
                <th><a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></th>
            </tr>
        }
    </tbody>

</table>
</div>
